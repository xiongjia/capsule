{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "APP_BUILD_TS": true,
    "APP_BUILD_OS": true,
    "APP_DEBUG": true
  },
  "rules": {
    "indent": [ "error", 2 ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "no-console": 0,
    "no-unused-vars": ["error", { "args": "none" }]
  }
}
